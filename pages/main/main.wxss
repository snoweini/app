/* main.wxss */
.mainbox{}
.mainbox .mtop {
	    width: 100%;
   font-size: 15pt;height:75pt; position: relative;
   border-bottom:2pt solid rgba(0,0,0,.03);background:#fff;}
.mainbox .mainwrap{flex:1;overflow: auto; padding:35pt 0 100pt; margin-top:0;}
.ul,.li{margin:0;padding:0;font-size: 14pt;line-height:26pt;}
.toptitle {
    width: 50pt;
    height: 100pt;
    border-radius: 6pt;
    border: 1px solid #5e8579;
    margin: 0 auto;
    text-align: center;
    padding-left:6pt;
    position: relative;
    color: #5e8579;
}
.top{
	margin-bottom:20pt;
}
.main{
	padding:35pt 15pt 0;
}
.toptitle .dot {
    display: block;
    position: absolute;
    right: -3pt;
    top: -3pt;
    background: #eb3f2f;
    border-radius: 5pt;
    width:10pt;
    height:10pt;
}
.top_jieq_tit{
	font-size:29pt;
    position: relative;
    top:10pt;
}
.shiju {
    width: 100%;
    height: auto;
    text-align: center;
    font-size:10pt;
}

.shiju ul li {
    display: block;
    height:30pt;
    line-height:30pt;
	font-size:17pt;
}

.imgs {
    width: 200pt;
    height: 200pt;
    display: block;
    margin-left: auto;
    margin-right: auto;
    margin-top:30pt;
    margin-bottom: 20pt;
}

.imgs image {
    width: 100%;
    height: 100%;
}

.title {
    font-size: 20pt;
    height:25pt;
    line-height: 25pt;
    padding-bottom: 7pt;
    border-bottom:1pt solid #495a80;
    color: #495a80;
}

.text {
    margin-top:15pt;
    line-height:30pt;
    font-family: '微软雅黑';
    font-size:13pt;
    text-indent:2em;
}

.footer_index {
    width:40pt;
    height:40pt;
    line-height:40pt;
    background: #495a80;
    text-align: center;
    color: #fff;
    border-radius: 50%;
    position: fixed;
    right:20pt;
    bottom:180pt;
    font-size:13pt;
    box-shadow: 2pt 2pt 10pt #ccc;
}
.home {
    width: 50pt;
    height: 50pt;
    line-height: 50pt;
    background: #495a80;
    text-align: center;
    color: #fff;
    border-radius: 50%;
    position: fixed;
    right: 20pt;
    bottom: 40pt;
    font-size: 15pt;
    box-shadow: 2pt 2pt 10pt #ccc;
}